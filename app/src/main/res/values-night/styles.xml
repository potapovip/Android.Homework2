<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyButtonStyle">
        <item name="android:insetTop">@dimen/insetTop</item>
        <item name="android:insetBottom">@dimen/insetBot</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="android:layout_width">@dimen/LW_button</item>
        <item name="android:layout_height">@dimen/LH_button</item>
        <item name="android:textSize">@dimen/b_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@color/NightButtonColor</item>
        <item name="android:layout_marginStart">@dimen/mar_s</item>
        <item name="android:layout_marginTop">@dimen/mar_t</item>
        <item name="android:layout_marginEnd">@dimen/mar_e</item>
        <item name="android:layout_marginBottom">@dimen/mar_b</item>
    </style>

    <style name="MyTextViewSryle">
        <item name="android:background">@color/black</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">@dimen/TV_fomtsize</item>
    </style>

    <style name="CalcLeftButtons" parent="MyButtonStyle">
        <item name="android:layout_marginStart">@dimen/mar_s_left</item>
    </style>

    <style name="CalcRightButtons" parent="MyButtonStyle">
        <item name="android:layout_marginEnd">@dimen/mar_E_right</item>
    </style>

</resources>